<%- include("../partials/header") %>

<div class="container">
    <h1 class="text-center">Edit <%= campground.name %></h1>
    <div class="row">
        <div class="mx-auto mt-5" style="width: 30%;">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="campgroundObject[campgroundName]" value="<%= campground.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="campgroundObject[campgroundImage]" value="<%= campground.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="campgroundObject[campgroundDescription]" value="<%= campground.description %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="campgroundObject[campgroundPrice]" value="<%= campground.price %>" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <input class="btn btn-primary btn-block" type="submit">
                </div>
            </form>
            <p><a class="btn btn-outline-info mt-2" href="/campgrounds">Go back to Campgrounds list</a></p>
        </div>
    </div>
    
</div>

<%- include("../partials/footer") %>